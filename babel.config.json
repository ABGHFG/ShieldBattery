{
  "env": {
    "app": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": { "electron": "7.1" }
          }
        ]
      ]
    },
    "node": {
      "presets": [
        [
          "@babel/preset-env",
          {
            "targets": { "node": "current" }
          }
        ]
      ]
    }
  },

  "plugins": [
    ["@babel/plugin-proposal-decorators", { "legacy": true }],
    ["@babel/plugin-proposal-class-properties", { "loose": true }],
    ["@babel/plugin-proposal-function-bind"]
  ]
}
