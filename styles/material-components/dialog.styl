@require './curves.styl'
@require './shadows.styl'
@require './units.styl'
@require './zindex.styl'
@require '../colors.styl'

.dialog
  position fixed
  z-index $zIndexDialog
  top 0px
  left 0px
  width 100%
  height 100%
  padding-top 16px

.dialog-contents
  position relative
  width 75%
  max-width 768px
  margin 0px auto
  z-index $zIndexDialog
  opacity 1
  background-color $colorBackground
  transform translate3d(0px, 64px, 0px)
  shadow5()
  border-radius 2px

.dialog-title
  margin 0
  padding 24px 24px 0 24px

.dialog-body
  padding 24px
  overflow-y auto
  overflow-x hidden

.dialog-actions
  padding 8px
  margin-bottom 8px
  width 100%
  text-align right

.dialog-overlay
  position fixed
  height 100%
  width 100%
  z-index $zIndexDialogOverlay
  top 0px
  left 0px
  opacity 1
  background-color $dialogOverlay
